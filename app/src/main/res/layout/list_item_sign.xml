<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginStart="10dp"
    >

    <ImageView
        android:id="@+id/imgSign"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/maximum_speed_limit_90"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tvConfidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imgSign"
        app:layout_constraintEnd_toEndOf="@+id/imgSign"
        app:layout_constraintStart_toStartOf="@+id/imgSign"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="[5] 40%"
        android:padding="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>